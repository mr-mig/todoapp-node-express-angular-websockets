doctype html
html(ng-app="app")
  head
    title Todoapp
    base(href="/")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-route.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-resource.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular-sanitize.min.js')
    script(src='/js/lib/ui-bootstrap-tpls-0.8.0-SNAPSHOT.min.js')
    script(src='/js/app.js')
    script(src='/js/controllers.js')
    script(src='/js/directives.js')
    script(src='/js/shared/models/Todo.js')
    script(src='/js/shared/services/inputParser.js')
    script(src='/js/services.js')
    script(src='/socket.io/socket.io.js')
  body(ng-controller='MainCtrl')
    div.container
      .navbar.navbar-inverse
        .navbar-header
          button.navbar-toggle(type="button", ng-click="navbarCollapsed = !navbarCollapsed", ng-init="navbarCollapsed = true", ng-if="current.user.isAuthenticated")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          div.navbar-brand ToDo App {{current.user.isAuthenticated ? '(' + current.user.username + ')' : ''}}

        div.collapse.navbar-collapse(collapse="navbarCollapsed", ng-if="current.user.isAuthenticated")
          ul.nav.navbar-nav
            include listHeader
      block content